<!-- res/drawable/edittext_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="#FF5722"/> <!-- Border color and width -->
    <corners android:radius="8dp"/> <!-- Rounded corners -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/> <!-- Padding inside the EditText -->
</shape>
